{
    "version": "0.2.0",
    "debugServer": 4711,
    "configurations": [
        {
            "name": "stepover_rs",
            "request": "launch",
            "type": "lldb",
            "program": "${workspaceRoot}/stepover",
            "stdio": "*",
            "stopOnEntry": false
        },
        {
            "name": "stepover_cpp",
            "request": "launch",
            "type": "lldb",
            "program": "${workspaceRoot}/stepover_cpp",
            "stdio": "*",
            "stopOnEntry": false
        },
        {
            "name": "debuggee_rs",
            "request": "launch",
            "type": "lldb",
            "program": "${workspaceRoot}/target/debug/debuggee_rs",
            "args": [
                "test"
            ],
            "stdio": "*",
            "stopOnEntry": false 
            ,
            "initCommands": [
                "command script import \"/usr/local/google/home/vadimcn/NW/rust/src/etc/lldb_rust_formatters.py\"",
                "type summary add --no-value --python-function lldb_rust_formatters.print_val -x \".*\" --category Rust",
                "type category enable Rust"
            ]
        },
        {
            "name": "debuggee_cpp",
            "request": "launch",
            "type": "lldb",
            "program": "${workspaceRoot}/debuggee_cpp",
            "args": [
                "test"
            ],
            "stdio": "*",
            "stopOnEntry": false
        }
    ]
}